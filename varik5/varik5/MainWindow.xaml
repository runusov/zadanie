        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="25" Margin="0,70,0,0" Name="fr" >Напиши стоимость одного кг яблок:</TextBlock>
        <TextBox MouseDoubleClick="price_MouseDoubleClick" Height="30" Width="300" Margin="275,108,275,396" Name ="price" TextChanged="price_TextChanged"></TextBox>

